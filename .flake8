[flake8]
format = wemake
show-source = True
doctests = True
exclude =
    src/passwordless/__init__.py

# Plugins:
accept-encodings = utf-8
max-complexity = 10
max-line-length = 80

[isort]
# See https://github.com/timothycrosley/isort#multi-line-output-modes
multi_line_output = 3
include_trailing_comma = true
default_section = FIRSTPARTY
# Is the same as 80 in flake8:
line_length = 79